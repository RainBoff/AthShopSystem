@model Data_Model_P.Sklep
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
<div class="container-fluid">

    @if (Model == null)
    {<h1> Nie posiadasz przypisanego sklepu !</h1> }
    else
    {

        <div class="row d-flex justify-content-center">
            <h2 class="justify-content-center">@Model.Nazwa</h2>
        </div>
        <div class="row d-flex justify-content-center">
            <h4 class="justify-content-center">@Model.Opis</h4>
        </div>
 
        <div class="row">

            <btn type="button" class="btn btn-secondary btn-block"><a class="nav-link text-white" asp-action="Produkty" asp-route-id="@Model.Id">Produkty</a></btn>
            <btn type="button" class="btn btn-secondary btn-block"><a class="nav-link text-white" asp-action="Zamowienia" asp-route-id="@Model.Id">Zamowienia</a></btn>
    
        </div>

    }
</div>
